<h1>EAT SOME FOOD FOOL</h1>



<div class="list-group">
  <% @recipes.each do |recipe| %>
    <div class="list-group-item">
      <ul class="recipe">
        <li><%= link_to(recipe.name, recipe_path(recipe.id))%></li>
        <li><%= link_to('delete', recipe_path(recipe.id), method: :delete)%></li>
        <li><%= link_to('edit recipe', edit_recipe_path(recipe.id))%></li>
      </ul>
    </div>
  <% end %>
</div>