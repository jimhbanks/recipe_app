<%= form_for @recipe do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>

  <%= f.label :method %>
  <%= f.text_field :method %>

  <%= f.submit 'Update Recipe' %>

<% end %>